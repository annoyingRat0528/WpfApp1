<Window x:Class="WpfApp1.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LogIn" Height="475" Width="300">
    <StackPanel Margin="10">
        <Label FontSize="20" >Name:</Label>
        <TextBox FontSize="20" x:Name="UserName"></TextBox>
        <Label FontSize="20">Password:</Label>
        <PasswordBox x:Name="Pswdbox" FontSize="20" PasswordChar="*"></PasswordBox>
        <Label FontSize="20">6 Digit Pin:</Label>
        <PasswordBox x:Name="Pin" FontSize="20" PasswordChar="*" MaxLength="6"></PasswordBox>
        <Button MaxWidth="200" x:Name="btnLogIn" Margin="0,20,0,0" Click="btnLogIn_Click">Log In</Button>
        
            <WrapPanel>
                <Image 
                    x:Name="WtHs"
                    Margin="0,10,0,0" 
                    Source="https://youimg1.c-ctrip.com/target/0104d1200048rqmyzD86F.jpg"
                    MouseUp="WtHs_MouseUp">
                    
                </Image>
                <Label FontStyle="Italic">The White House</Label>
            </WrapPanel>
        
    </StackPanel>
</Window>
