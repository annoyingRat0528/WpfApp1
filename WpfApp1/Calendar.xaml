<Window x:Class="WpfApp1.Calendar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Calendar" Height="600" Width="300">
    <ScrollViewer>
        <StackPanel>
            <Viewbox Stretch="Uniform">
                <Calendar x:Name="myCalendar" SelectedDate="01.01.2026"
                      SelectedDatesChanged="myCalendar_SelectedDatesChanged"
                      DisplayMode="Month">
                    <Calendar.BlackoutDates>
                        <CalendarDateRange Start="08.12.2025" End="08.12.2025"></CalendarDateRange>
                    </Calendar.BlackoutDates>
                </Calendar>
            </Viewbox>
            <TextBlock x:Name="MyTextblock" Margin="10,0,10,0"></TextBlock>
            <DatePicker Margin="10"
                    SelectedDate="01/01/2026" SelectedDateFormat="Long"
                    SelectedDateChanged="DatePicker_SelectedDateChanged"></DatePicker>
            <Expander Expanded="Expander_Expanded">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="40" Source="https://is1-ssl.mzstatic.com/image/thumb/Purple221/v4/5c/d2/05/5cd205f7-cb72-ce15-1077-af8e63a97fc5/AppIcon-0-0-2x_U007euniversal-0-4-85-220.png/1200x630bb.png"></Image>
                        <Label VerticalContentAlignment="Center">Test label</Label>
                    </StackPanel>
                </Expander.Header>
                <Label>This is a piece of content</Label>
            </Expander>
            <WrapPanel>
                <Button Content="Click to test WrapPanel"/>
                <Button Content="Click to test WrapPanel" Height="50"/>
                <Button Content="Click to test WrapPanel"/>
                <Button Content="Click to test WrapPanel"/>
                <Button Content="Click to test WrapPanel"/>
            </WrapPanel>
            <DockPanel LastChildFill="False">
                <Button DockPanel.Dock="Left" Content="L"></Button>
                <Button DockPanel.Dock="Right" Content="R"></Button>
                <Button DockPanel.Dock="Top" Content="top"></Button>
                <Button Content="Within a DockPanel" Margin="10"></Button>
            </DockPanel>
        </StackPanel>

    </ScrollViewer>
</Window>
