<Window x:Class="WpfApp1.iPhone_16"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="iPhone_16" Height="758" Width="350">
    <DockPanel LastChildFill="False">
        <StackPanel DockPanel.Dock="Top">
            
        <Image Source="https://www.apple.com.cn/newsroom/images/2025/06/apple-introduces-a-delightful-and-elegant-new-software-design/geo/Apple-WWDC25-Liquid-Glass-hero-250609_big.jpg.medium.jpg"></Image>
        <TextBlock FontSize="16" FontFamily="微软雅黑 Bold" TextWrapping="Wrap" Margin="20,20,20,0">Apple 推出灵动活泼、赏心悦目<LineBreak/>的新软件设计</TextBlock>
        <TextBlock Margin="20,0,20,0" FontSize="16" TextWrapping="Wrap">
            跨平台通用设计进一步凸显内容，活力更胜以往，同时延续了 Apple 软件原有的熟悉感
        </TextBlock>
        <TextBlock Margin="20,10,20,0" FontSize="16" TextWrapping="Wrap">
            前往 <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="https://www.apple.com.cn/newsroom/2025/06/apple-introduces-a-delightful-and-elegant-new-software-design/">Apple Newsroom</Hyperlink> 了解更多有关液态玻璃的更多信息
        </TextBlock>
        </StackPanel>

        <Button DockPanel.Dock="Bottom" FontSize="14" Margin="20,0,20,20" Height="40">
            关闭
        </Button>
        <Button DockPanel.Dock="Bottom" FontSize="14" Margin="20,0,20,10" Height="40" Background="DeepSkyBlue">
            开始使用
        </Button>

    </DockPanel>
</Window>
