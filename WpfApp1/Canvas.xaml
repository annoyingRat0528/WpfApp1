<Window x:Class="WpfApp1.Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Canvas" Height="400" Width="400">
    <Canvas Opacity=".7">
        <Button Canvas.Left="5" Content="Topleft"/>
        <Button Canvas.Right="5" Content="Topright"/>
        <Rectangle Width="100" Height="100" Fill="SaddleBrown" Panel.ZIndex="1"
                   Canvas.Left="50" Canvas.Top="0"></Rectangle>
        <Rectangle Width="100" Height="100" Fill="Gold" Panel.ZIndex="2"
                   Canvas.Left="100" Canvas.Top="50"></Rectangle>
        <Image Source="https://www.apple.com.cn/iphone-16/images/overview/welcome/hero_endframe__dtznvlokjeeu_medium.png"
               Width="200" Canvas.Bottom="0"></Image>
    </Canvas>
</Window>
