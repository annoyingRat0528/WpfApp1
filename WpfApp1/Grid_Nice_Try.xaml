<Window x:Class="WpfApp1.Grid_Nice_Try"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Grid_Nice_Try" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Column="0" Grid.RowSpan="2">Button 1</Button>
        <Button Grid.Column="1" Grid.Row="2">Button 2</Button>
        <Button Grid.Column="2" Width="100" Content="Button 3" Grid.RowSpan="3"/>
        <TextBlock Grid.Column="1" Grid.RowSpan="2" FontSize="28" FontStyle="Italic">I am a text block<LineBreak/>Text<LineBreak/>
            <Span><TextBlock Foreground="BurlyWood">Burlywood color</TextBlock></Span></TextBlock>
    </Grid>
</Window>
