<Window x:Class="WpfApp1.VolumeControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="VolumeControl" Height="400" Width="1000">
    <StackPanel VerticalAlignment="Center" Margin="20">
        <Slider x:Name="VolumeSlider" TickFrequency="1" IsSnapToTickEnabled="True" TickPlacement="BottomRight"
                Value="50" Maximum="100" ValueChanged="VolumeSlider_ValueChanged"></Slider>
        <TextBlock x:Name="VolumeIndicator" FontSize="{
            Binding ElementName=VolumeSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}">
            Volume is now: 50
        </TextBlock>
        <Slider x:Name="ChargeLimit" Margin="0,10,0,0"
                IsSnapToTickEnabled="True" TickPlacement="BottomRight" TickFrequency="5"
                Minimum="80" Maximum="100" ValueChanged="ChargeLimit_ValueChanged"></Slider>
        <TextBlock x:Name="ChargelimitIndicator" Text="Charge Limit:"></TextBlock>

    </StackPanel>
</Window>
